        <field name="name">deferred_tax_liabilities_are_short</field>
        <field name="description">Myynti</field>
        <field name="expression">-balp[('tag_ids', 'in', (ref('l10n_fi.account_tag_sales').id))][]</field>
        <field name="auto_expand_accounts">true</field>
        <field name="auto_expand_accounts_style_id" ref="mis_template_financial_report.style_details" />
        <field name="style_id" ref="mis_template_financial_report.style_header_indent" />
        <field name="type">num</field>
        <field name="compare_method">diff</field>
        <field name="accumulation_method">sum</field>
        <field name="sequence">10</field>
        <field name="report_id" ref="mis_template_financial_report.report_pl" />
    </record>

